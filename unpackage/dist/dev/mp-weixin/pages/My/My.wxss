/* 水平间距 */
.bg-set {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: #f5f5f5;
  z-index: -1;
}
.container {
  margin: 0 auto;
  width: 94.5%;
  height: 735px;
}
.userinfo {
  margin-top: 4.5%;
  width: 100%;
  height: 9.1%;
}
.avatar {
  float: left;
  height: 100%;
  width: 67.185px;
  border-radius: 50%;
}
.otherinfo {
  float: left;
  margin-left: 2%;
}
.username {
  margin-top: 13%;
  font-size: 18px;
  font-weight: 600;
  color: black;
}
.edit {
  margin-top: 4%;
  font-size: 12px;
  color: #b4b4b6;
}
.userinfo .arrow-right {
  float: right;
  margin-top: 23px;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background-color: rgba(0, 0, 0, 0.2);
}
.arrow-right .arrow {
  width: 5px;
  height: 5px;
  border-top: 2px solid #ffffff;
  border-right: 2px solid #ffffff;
  transform: rotate(45deg);
  margin-top: 6px;
  margin-left: 4.5px;
}
.read-data {
  margin-top: 4%;
  width: 100%;
  height: 29.5%;
  border-radius: 12px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.read-item {
  flex: 1;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: black;
}
.active {
  background-color: #768944;
}
.icon {
  margin-left: 12px;
  margin-right: 10px;
  width: 25px;
  height: 25px;
}
.personality {
  margin-top: 3%;
  width: 100%;
  height: 35%;
  border-radius: 12px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.personality-items {
  flex: 1;
  display: flex;
}
.personality-items:first-child {
  margin-bottom: 3%;
}
.personality-item {
  flex: 1;
  background-color: white;
  border-radius: 12px;
}
.personality-item:first-child {
  margin-right: 3%;
}
.title {
  height: 52px;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: black;
}
.title image {
  width: 25px;
  height: 25px;
  margin-left: 12px;
  margin-right: 10px;
}
.personality-item .p {
  margin-left: 12px;
  margin-top: -3px;
  font-size: 12px;
  color: #b4b4b6;
}
.bottom {
  margin-top: 3%;
  width: 100%;
  height: 19.5%;
  border-radius: 12px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.bottom-item {
  flex: 1;
  background-color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: black;
}
.click-hover {
  background-color: #d0d0d0;
}