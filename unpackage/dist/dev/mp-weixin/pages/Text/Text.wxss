/* 水平间距 */
.bg-set {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background-color: #f5f5f5;
  z-index: -1;
}

/* 搜索样式 */
search-bar {
  display: flex;
  flex-direction: row;
  padding: 10px;
  margin-bottom: -10px;
}
.search-bar input {
  flex: 1;
  border: 1px solid #ccc;
  padding: 5px;
  border-radius: 5px;
}
.search-bar button {
  font-size: 14px;
  margin-left: 10px;
}

